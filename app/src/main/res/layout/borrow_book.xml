<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp">




    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/calendar"
        android:layout_marginTop="45dp"
        android:id="@+id/calander"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrowing Form"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@id/calander"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calander"
        android:hint="First Name"
        android:textStyle="bold"
        android:layout_marginTop="80dp"/>


    <EditText
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname"
        android:hint="Last Name"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>



    <EditText
        android:id="@+id/phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lname"
        android:hint="Phone Number"
        android:inputType="number"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>



    <EditText
        android:id="@+id/mailaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenum"
        android:hint="Mail Address"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>


    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mailaddress"
        android:hint="Address"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Done"
        android:backgroundTint="#4AC4D8"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</RelativeLayout>